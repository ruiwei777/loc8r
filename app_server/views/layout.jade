doctype html
html(ng-app='loc8r', ng-controller="MainCtrl")
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= title
    
    link(rel="icon", href="/images/marker-blue.png", type="image/x-icon")

    //- Latest compiled and minified CSS
    link(rel='stylesheet', 
        href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css",integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u",
        crossorigin="anonymous")

    //- Custom CSS
    link(rel='stylesheet', href='/stylesheets/style.css')

    //- Angular
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.5.8/angular.min.js')

    script(src='/javascripts/app/app.module.js')
    script(src='/javascripts/app/app.config.js')
    script(src='/javascripts/app/location-list/location-list.module.js')
    script(src='/javascripts/app/location-list/location-list.component.js')
    script(src='/javascripts/app/location-service/location-service.module.js')
    script(src='/javascripts/app/location-service/location-service.service.js')


  body
    //- Header
    .navbar.navbar-default.navbar-fixed-top
        .container
            .navbar-header
                a.navbar-brand(href='/') Loc8r
                button.navbar-toggle(type='button', data-toggle='collapse', data-target='#navbar-main')
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
            #navbar-main.navbar-collapse.collapse
                ul.nav.navbar-nav
                    li
                        a(href='/location/') Locations

                    li
                        a(href='/about/') About
                form.navbar-form.navbar-left
                    .form-group
                        input.form-control(type="text", placeholder="filter", ng-model="$ctrl.searchText")
                    //- button.btn.btn-default(type="submit") Sbumit
    
    .navbar-splitter

    .container
        block content

        footer
            .row
                .col-xs-12
                small &rarr; Node.js with Angular.js 1.5.
                    a(href="//github.com/ruiwei777/loc8r", target="_blank" rel="noferrer") GitHub

    


    //- jQuery before Bootstrap CSS
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js")

    //- Latest compiled and minified JavaScript
    script( src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js",
        integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa", crossorigin="anonymous")
